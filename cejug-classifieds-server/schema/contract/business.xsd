<?xml version="1.0" encoding="utf-8" ?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://cejug-classifieds.dev.java.net/server/metadata/business"
	xmlns:business="http://cejug-classifieds.dev.java.net/server/metadata/business"
	elementFormDefault="qualified" attributeFormDefault="qualified"
	xmlns:mime="http://www.w3.org/2005/05/xmlmim">
	<xsd:annotation>
		<xsd:documentation>
			The Business Objects of CEJUG-Classifieds.
		</xsd:documentation>
	</xsd:annotation>

	<xsd:complexType name="AbstractAdvertisement" abstract="true">
		<xsd:sequence minOccurs="1">
			<xsd:element name="headline" type="xsd:string" />
			<xsd:element name="keywords" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:element name="PdfAdvertisement">
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="business:AbstractAdvertisement">
					<xsd:attribute name="bbb" type="xsd:string"
						use="required" />
				</xsd:extension>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="ImageAttachment">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="flash" type="xsd:base64Binary"
				mime:expectedContentTypes="application/x-shockwave-flash" />
		</xsd:sequence>
	</xsd:complexType>

	<!-- xs:complexType name="mime.type">
		<xs:choice minOccurs="1" maxOccurs="1">
		<xs:element ref="selected" />
		<xs:element ref="unselected" />
		<xs:element ref="dimpled" />
		<xs:element ref="perforated" />
		</xs:choice>
		</xs:complexType-->

	<xsd:element name="FlashAdvertisement">
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="business:AbstractAdvertisement">
					<xsd:sequence>
						<xsd:element name="swf.collection"
							type="business:FlashAttachment" minOccurs="0"
							maxOccurs="unbounded" />
					</xsd:sequence>
				</xsd:extension>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="FlashAttachment">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="flash" type="xsd:base64Binary"
				mime:expectedContentTypes="application/x-shockwave-flash" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Section">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="description" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Advertisement">
		<xsd:sequence>
			<xsd:element name="advertiser" type="business:Author" />
			<xsd:element name="headline" type="xsd:string" />
			<xsd:element name="short.description" type="xsd:string" />
			<xsd:element name="full.text" type="xsd:string" />
			<xsd:element name="status" type="xsd:int" />
			<xsd:element name="keywords" type="xsd:string" />
			<xsd:element name="publishing.start" type="xsd:dateTime" />
			<xsd:element name="publishing.finish" type="xsd:dateTime" />
			<xsd:element name="attachment.id" type="xsd:int"
				minOccurs="0" maxOccurs="unbounded" />
			<xsd:element name="section.id" type="xsd:int" />
			<xsd:element name="locale" type="business:Locale" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:element name="AdvertisementBundle">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="author.id" type="xsd:string"
					minOccurs="1" maxOccurs="1" />
				<xsd:element name="advertisements"
					type="business:Advertisement" minOccurs="1" maxOccurs="unbounded" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="Status">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="description" type="xsd:string" />
			<xsd:element name="is.active" type="xsd:boolean" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Author">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="type" type="business:Author.Type" />
			<xsd:choice id="contact" minOccurs="1" maxOccurs="1">
				<xsd:element name="selected" type="xsd:string" />
				<xsd:element name="email" type="xsd:string" />
				<xsd:element name="phone" type="xsd:string" />
			</xsd:choice>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:simpleType name="Author.Type">
		<xsd:restriction base='xsd:string'>
			<xsd:enumeration value="commercial" />
			<xsd:enumeration value="community" />
		</xsd:restriction>
	</xsd:simpleType>

	<xsd:complexType name="Locale">
		<xsd:sequence>
			<xsd:element name="language" type="xsd:string" />
			<xsd:element name="country" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

</xsd:schema>