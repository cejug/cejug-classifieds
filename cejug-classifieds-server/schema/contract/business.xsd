<?xml version="1.0" encoding="utf-8" ?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://cejug-classifieds.dev.java.net/metadata/business"
	xmlns:business="http://cejug-classifieds.dev.java.net/metadata/business"
	xmlns:mime="http://www.w3.org/2005/05/xmlmim"
	xmlns:rss20="http://blogs.law.harvard.edu/RSS20.xsd"
	xmlns:atom10="http://www.w3.org/2005/Atom"
	elementFormDefault="qualified">

	<xsd:import namespace="http://www.w3.org/2005/Atom"
		schemaLocation="atom10.xsd" />

	<xsd:import namespace="http://blogs.law.harvard.edu/RSS20.xsd"
		schemaLocation="rss20.xsd" />

	<xsd:annotation>
		<xsd:documentation>
			The Business Meta-data of CEJUG-Classifieds.
		</xsd:documentation>
	</xsd:annotation>

	<xsd:complexType name="AbstractAdvertisement" abstract="true">
		<xsd:sequence minOccurs="1">
			<xsd:element name="headline" type="xsd:string" />
			<xsd:element name="keywords" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:element name="PdfAdvertisement">
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="business:AbstractAdvertisement">
					<xsd:attribute name="bbb" type="xsd:string"
						use="required" />
				</xsd:extension>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="ImageAttachment">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="flash" type="xsd:base64Binary"
				mime:expectedContentTypes="application/x-shockwave-flash" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:element name="FlashAdvertisement">
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="business:AbstractAdvertisement">
					<xsd:sequence>
						<xsd:element name="swf.collection"
							type="business:FlashAttachment" minOccurs="0"
							maxOccurs="unbounded" />
					</xsd:sequence>
				</xsd:extension>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="FlashAttachment">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="flash" type="xsd:base64Binary"
				mime:expectedContentTypes="application/x-shockwave-flash" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Section">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="description" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Advertisement">
		<xsd:sequence>
			<xsd:element name="advertiser" type="business:Customer" />
			<xsd:element name="headline" type="xsd:string" />
			<xsd:element name="short.description" type="xsd:string" />
			<xsd:element name="full.text" type="xsd:string" />
			<xsd:element name="status" type="xsd:int" />
			<xsd:element name="keywords" type="xsd:string" />
			<xsd:element name="publishing.start" type="xsd:dateTime" />
			<xsd:element name="publishing.finish" type="xsd:dateTime" />
			<xsd:element name="attachment.id" type="xsd:int"
				minOccurs="0" maxOccurs="unbounded" />
			<xsd:element name="section.id" type="xsd:int" />
			<xsd:element name="locale" type="business:Locale" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:element name="AdvertisementBundle">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="author.login" type="xsd:NMTOKEN" />
				<xsd:element name="author.domain" type="xsd:NMTOKEN" />
				<xsd:element name="advertisements"
					type="business:Advertisement" minOccurs="1" maxOccurs="unbounded" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="Domain">
		<xsd:sequence>
			<xsd:element name="shared.quota" type="xsd:boolean" />
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="timezone" type="xsd:string"
				default="Fortaleza/Ceara" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Customer">
		<xsd:sequence>
			<xsd:element name="login" type="xsd:string" />
			<xsd:element name="domain" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Locale">
		<xsd:sequence>
			<xsd:element name="language" type="xsd:string" />
			<xsd:element name="country" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:element name="RssCollection">
		<xsd:complexType>
			<xsd:sequence minOccurs="1" maxOccurs="unbounded">
				<xsd:element name="rss.collection" type="rss20:channel" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:element name="AtomCollection">
		<xsd:complexType>
			<xsd:sequence minOccurs="1" maxOccurs="unbounded">
				<xsd:element name="atom.collection"
					type="atom10:feedType" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>


	<xsd:element name="AtomFilterCollection">
		<xsd:complexType>
			<xsd:sequence minOccurs="1" maxOccurs="unbounded">
				<xsd:element name="filter.collection"
					type="business:SyndicationFilter" nillable="true" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="SyndicationFilter">
		<xsd:sequence>
			<xsd:element name="upper.bound" type="xsd:int"
				nillable="true" />
			<xsd:element name="date.initial" type="xsd:dateTime" />
			<xsd:element name="date.final" type="xsd:dateTime" />
			<xsd:element name="section" type="xsd:string" />
			<xsd:element name="keywords" type="xsd:string" minOccurs="0"
				maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:element name="RssFilterCollection">
		<xsd:complexType>
			<xsd:sequence minOccurs="1" maxOccurs="unbounded">
				<xsd:element name="filter.collection"
					type="business:SyndicationFilter" nillable="true" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:element name="SpamReport">
		<xsd:complexType>
			<xsd:sequence minOccurs="1" maxOccurs="1">
				<xsd:element name="advertisement.id" type="xsd:int" />
				<xsd:element name="reason" type="xsd:string" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
</xsd:schema>