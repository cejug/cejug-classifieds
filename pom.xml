	</reporting>
    <pluginRepositories>
        <pluginRepository>
            <id>maven.java.net</id>
            <name>Java.net Maven2 Repository</name>
            <url>http://download.java.net/maven/2</url>
        </pluginRepository>
    </pluginRepositories>
	<properties>
		<glassfish.home>${env.AS_HOME}</glassfish.home>
		<domain.username>admin</domain.username>
