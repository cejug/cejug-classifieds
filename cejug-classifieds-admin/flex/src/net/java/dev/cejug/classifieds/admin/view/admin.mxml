<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
	xmlns:login="net.java.dev.cejug.classifieds.admin.view.login.*"
	xmlns:view="net.java.dev.cejug.classifieds.admin.view.*" currentState="login"
	creationComplete="adminService.init(event)" >
	<view:Admin id="adminService" />
	<mx:states>
		<mx:State name="login">
    		<mx:AddChild position="lastChild">
	    	    <login:login id="loginScreen" y="57" width="100%" height="100%" />
    		</mx:AddChild>
		</mx:State>
		<mx:State name="main">
    		<mx:AddChild position="lastChild">
            	<view:main id="mainScreen" y="57" width="100%" height="100%"/>
    		</mx:AddChild>
		</mx:State>
	</mx:states>
    <mx:transitions>
        <mx:Transition id="toMain" fromState="*" toState="main">
            <mx:Dissolve target="{loginScreen}"  alphaFrom="0.0" alphaTo="1.0" duration="2000"/>
        </mx:Transition>
        <mx:Transition id="toLogin" fromState="*" toState="login">
            <mx:Dissolve target="{mainScreen}"  alphaFrom="0.0" alphaTo="1.0" duration="2000"/>
        </mx:Transition>
    </mx:transitions>
